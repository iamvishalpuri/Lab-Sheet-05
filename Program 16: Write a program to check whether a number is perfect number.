#include <iostream>
using namespace std;
int main() {
    int n;
    int sum = 0;
    cout << "Enter a number: ";
    cin >> n;
    for(int i = 1; i < n; i++) {
        if(n % i == 0) sum += i;
    }
    if(sum == n) cout << "Perfect number";
    else cout << "Not a perfect number";
    return 0;
}

OUTPUT
Enter a number: 6
Perfect number
