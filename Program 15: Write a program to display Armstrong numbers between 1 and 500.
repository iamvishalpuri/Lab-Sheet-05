#include <iostream>
using namespace std;
int main() {
    cout << "Armstrong numbers between 1 and 500: ";
    for(int n = 1; n <= 500; n++) {
        int temp = n;
        int sum = 0;
        while(temp > 0) {
            int digit = temp % 10;
            sum += digit * digit * digit;
            temp /= 10;
        }
        if(sum == n) cout << n << " ";
    }
return 0;
}

OUTPUT
Armstrong numbers between 1 and 500: 1 153 370 371 407 
