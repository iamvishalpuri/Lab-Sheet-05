#include <iostream>
using namespace std;
int main() {
    int ch;
    cout << "Enter a choice (1-3): ";
    cin >> ch;
    switch(ch) {
        case 1: cout << "Choice 1 selected" ; break;
        case 2: cout << "Choice 2 selected" ; break;
        case 3: cout << "Choice 3 selected" ; break;
        default: cout << "No matching choice" ;
    }
    return 0;
}

OUTPUT 
Enter a choice (1-3): 4
No matching choice
