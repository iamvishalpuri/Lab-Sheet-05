#include <iostream>
using namespace std;
int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    cout << "Prime factors: ";
    for(int i = 2; i <= n; i++) {
        while(n % i == 0) {
            cout << i << endl;
            n /= i;
        }
    }
    return 0;
}

OUTPUT
Enter a number: 315
Prime factors: 3 3 5 7 
