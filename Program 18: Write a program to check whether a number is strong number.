#include <iostream>
using namespace std;
int main() {
    int n, og, digit, sum = 0;
    cout << "Enter a number: ";
    cin >> n;
    og = n; 
    while (n > 0) {
        digit = n % 10;
        int fact = 1;  
        for (int i = 1; i <= digit; i++) {
            fact = fact * i;
        }
        sum = sum + fact;  
        n = n / 10;
    }
    if (sum == og) {
        cout << og << " is a strong number";
    } else {
        cout << og << " is not a strong number";
    }
   return 0;
}


OUTPUT 
Enter a number: 145
145 is a strong number
Enter a number: 123
123 is not a strong number
