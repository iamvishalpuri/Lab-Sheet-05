#include <iostream>
using namespace std;
int main() {
    int n, og, sum = 0;
    cout << "Enter a number: ";
    cin >> n;
    og = n;
    while(n > 0) {
        int digit = n % 10;
        sum += digit * digit * digit;
        num /= 10;
    }
    if(sum == og) cout << "Armstrong number";
    else cout << "Not an Armstrong number";
    return 0;
}

