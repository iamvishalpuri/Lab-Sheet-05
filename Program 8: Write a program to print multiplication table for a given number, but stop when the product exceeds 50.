#include <iostream>
using namespace std;
int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    for(int i = 1; i <= 10; i++) {
        if(n*i > 50) break;
        cout << n << " * " << i << " = " << (n * i) << endl;
    }
    return 0;
}

OUTPUT
Enter a number: 7
7 * 1 = 7
7 * 2 = 14
7 * 3 = 21
7 * 4 = 28
7 * 5 = 35
7 * 6 = 42
7 * 7 = 49
