#include <iostream>
using namespace std;
int main() {
    int n;
    int count = 0;
    cout << "Enter numbers (end with 0): ";
    while(true) {
        cin >> n;
        if(n == 0) break;
        if(n > 0) count++;
    }
    cout << "Count of positive numbers: " << count;
    return 0;
}

OUTPUT 
Enter numbers (end with 0): 8 -3 9 -2 3 0
Count of positive numbers: 3
